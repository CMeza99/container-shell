[core]
	editor = vim
	askpass =
	excludesfile = ~/.gitignore
[user]
	name = Carlos Meza
	email = carlos@digitalr00ts.com
[push]
	default = simple
[credential]
	helper = cache --timeout=1653400
[branch]
  autosetuprebase = always
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[color]
	ui = auto
[commit]
	gpgsign = true
[gpg]
	program = gpg2
